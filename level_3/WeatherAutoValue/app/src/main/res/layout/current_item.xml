<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">
    <data>
        <variable
            name="obj"
            type="com.example.weatherautovalue.Current" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:text='@{"Temperature, C " + obj.getTempC()}'
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:text='@{"Vind, kph " + obj.getWindKph()}'
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:text='@{"Vind, degree " + obj.getWindDegree()}'
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:text='@{"Vind, dir " + obj.getWindDir()}'
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:text='@{"Pressure, mb " + obj.getHumidity()}'
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>
</layout>