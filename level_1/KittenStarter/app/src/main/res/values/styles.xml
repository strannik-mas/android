<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- Тема для детальной Acitivity - без ActionBar -->
    <style name="DetailStyle" parent="Theme.AppCompat.Light.NoActionBar"/>


    <!-- Тема без экшн бара - заместно него используем тулбар -->
    <style name="CollapseActivityTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Прозрачный фон статус бара -->
        <item name="android:windowTranslucentStatus">true</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!--
            <item name="navigationIcon">@drawable/abc_ic_ab_back_mtrl_am_alpha</item>

    -->

</resources>
